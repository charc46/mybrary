<div class="container">
  <div class="show-container">
    <div id="book-details">
      <div id="book-cover">
        <%= image_tag @book.thumbnailUrl, alt: "Cover for #{@book.title}" %>
      </div>
      <div id="book-info">
        <h1 class="title"><%= @book.title %></h1>
        <h4 class="title"><%= @book.subtitle %></h4>
        <p><%= link_to @book.author, author_path(@book.author), class: 'btn-link' %></p>
        <p><%= link_to @book.categories, categories_path(@book.categories), class: 'btn-link' %></p>
        <p><%= link_to "Delete Book", user_book_path(@user_book.id), method: :delete, class: 'btn btn-theme', data: { confirm: "Are you sure?" } %></p>
        <% if @user_book.completed == false %>
          <p><%= link_to "Mark as complete", complete_book_path(@user_book.id), method: :patch, class: 'btn btn-theme'%></p>
        <% else %>
          <p><%= link_to "Mark as incomplete", complete_book_path(@user_book.id), method: :patch, class: 'btn btn-theme'%></p>
        <% end %>
      </div>
    </div>
    <div id="book-description">
      <p><%= @book.description %></p>
    </div>
    <div id="author-books">
      <h5 class="title mt-4">Other books in your collection by <%= @book.author %></h5>
      <% @author_books.each do |book| %>
        <% unless book.title == @book.title %>
          <div><%= link_to book.title, book_path(book.id), class: 'btn-link' %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
