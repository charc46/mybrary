<h1 class="title text-center">Your friends</h1>

<div class="user-search-form">
  <%= form_tag(search_user_path, method: 'get') do %>
    <%= label_tag(:q, "") %>
    <%= text_field_tag(:q, nil, placeholder: 'Search for a user', class: 'form-control') %>
    <%= submit_tag("Search", class: 'btn btn-theme form-control') %>
  <% end %>
</div>

<div class="user-table">
  <% if params[:q] %>
    <%= render 'shared/user_table' %>
  <% else %>
    <%= render 'shared/friends_table' %>
  <% end %>
</div>

