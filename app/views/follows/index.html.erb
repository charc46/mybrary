<h1>Your friends</h1>

<div class="search-form">
  <%= form_tag(search_user_path, method: 'get') do %>
    <%= label_tag(:q, "") %>
    <%= text_field_tag(:q, nil, placeholder: 'Search for a user', class: 'form-control') %>
    <%= submit_tag("Search", class: 'btn btn-theme form-control') %>
  <% end %>
</div>

<% if params[:q] %>
  <% @users.each do |user| %>
    <h4><%= user.email %></h4>
  <% end %>
<% end %>

